package Exo2;
import java.util.Random;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Random random = new Random();
		int[] randomNumber = new int[3];
		retry: 
		for ( int x=0; x<3; x++) {
			randomNumber[x] = random.nextInt(1001);
			System.out.println("A random int from 0 to 1000: "+ randomNumber[x]);
			if (randomNumber[1] % 2 != 1) {
				System.out.println("CES PAIRS"+ randomNumber[1]);
			} else {
				System.out.println("CES PAS PAIRS"+ randomNumber[1]);
				continue retry;
			}
		}
	}
}
